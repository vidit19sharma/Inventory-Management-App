<!-- heading -->
<div class="bg-white/50 rounded pt-10 pb-5 border-1 border-neutral-300 px-5 shadow-lg mx-auto max-w-3xl">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl">New User</h2>
    <p class="mt-2 text-lg/8 text-gray-500">Please enter details to SignUp</p>
  </div>
  <!-- form -->
  <form action="/signup" method="POST" class="mx-auto mt-5 max-w-xl sm:mt-5">
    <div class="flex flex-col">
      
      <!-- name -->
      <div class="">
        <label for="name" class="block text-sm/6 font-semibold text-gray-900">Name</label>
        <div class="mt-2.5">
          <input id="name" type="text" name="name" autocomplete="name" class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-cyan-400" />
        </div>
      </div>

      <!-- email -->
      <div class="">
        <label for="email" class="block text-sm/6 font-semibold text-gray-900">Email</label>
        <div class="mt-2.5">
          <input id="email" type="email" name="email" autocomplete="email" class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-cyan-400" />
        </div>
      </div>

        <!-- password -->
      <div class="">
        <label for="password" class="block text-sm/6 font-semibold text-gray-900">Password</label>
        <div class="mt-2.5">
          <input id="password" type="password" name="password"  class="block w-full rounded-md bg-white px-3.5 py-2 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-cyan-400" />
        </div>
      </div>
      
    </div>
    <div class="mt-10">
      <button type="submit" class="block w-full rounded-md bg-gradient-to-r from-indigo-500 via-sky-500 to-lime-500 opacity-80  oppx-3.5 py-2.5 text-center text-sm font-semibold text-white shadow-xs hover:opacity-90  focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">SignUp</button>
    </div>
  </form>
</div>
