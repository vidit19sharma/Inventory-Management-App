<div class="text-center mx-auto max-w-3xl">
        <h1 class="text-5xl font-semibold tracking-tight text-balance text-gray-900 sm:text-7xl delayed-appear1">Onestop app to maintain all your inventory</h1>
        <p class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8 delayed-appear2">Inventory Management made easy.</p>
        <div class="mt-10 flex items-center justify-center gap-x-6 delayed-appear3">
          <% if(locals.userName){ %>
            <a href="/products" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">View Products</a>
            <a href="/new" class="text-sm/6 font-semibold text-gray-900">Add Product <span aria-hidden="true">→</span></a>
          <% }else{ %>
            <a href="/signup" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign Up</a>
            <a href="/login" class="text-sm/6 font-semibold text-gray-900">Log In <span aria-hidden="true">→</span></a>
          <% } %> 
        </div>
      </div>